class Solution:
    def minSubArrayLen(self, target: int, nums: List[int]) -> int:
        i, j, sub_sum, sub_len = 0, 0, 0, float('inf')
        while i < len(nums):
            if sub_sum < target:
                sub_sum += nums[i]
                i += 1
            while sub_sum >= target:
                if i - j < sub_len:
                    sub_len = i - j 
                sub_sum -= nums[j]
                j += 1
        return 0 if sub_len == float('inf') else sub_len
